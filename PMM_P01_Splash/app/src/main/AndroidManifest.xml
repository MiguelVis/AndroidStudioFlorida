<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.floppysoftware.pmm_p01_splash" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Splash Screen: Es la activity de inicio, ocupa toda
             la pantalla del dispositivo, no muestra título ni menú, de ahí
             que utilice un tema especial.
             -->

        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity principal, que se mostrará tras la Splash Screen -->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
